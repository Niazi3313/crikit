<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xz"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".oncomingscreen">

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.TextView"
        android:layout_width="182dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="260dp"
        android:breakStrategy="high_quality"
        android:fadingEdge="vertical"
        android:fontFamily="serif"
        android:gravity="bottom|center"
        android:text="Welcome"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getstarted"
        android:layout_width="292dp"
        android:layout_height="wrap_content"


        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:text="Get Started"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="296dp"
        android:layout_height="233dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Welcome to CRIC-IT, your premier cricket media platform! Here, you can access insightful content, analyze player bowling actions, and discover many more intriguing features. Join us to enhance your cricket experience."
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        style="@android:style/Widget.TextView"
        android:layout_width="240dp"
        android:layout_height="74dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:breakStrategy="high_quality"
        android:fadingEdge="vertical"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="to the CRICK-IT"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>


